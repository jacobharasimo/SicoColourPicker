<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="SicoColourPicker.JogDialer"
	d:DesignWidth="42" d:DesignHeight="100">

	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="24"/>
		</Grid.RowDefinitions>
		<Rectangle StrokeThickness="4" Stroke="#FFDA291C" Margin="0,0,0,20" Grid.RowSpan="2"/>
		<Grid Grid.Row="1" Background="#FFDA291C">
			<Viewbox HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,4,0">
				<TextBlock TextWrapping="Wrap" Text="&lt; &gt;" Foreground="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
			</Viewbox>
		</Grid>
	</Grid>
</UserControl>